{
  "name": "{{#if profile}}{{ profile }}-{{/if}}monitoring{{#if stage}}-{{ stage }}{{/if}}",
  "version": "1.0.0",
  "scripts": {
    "lint": "eslint . --ext ts",
    "lint:fix": "eslint . --ext ts --fix",
    "build": "tsc",
    "watch": "tsc -w",
    "synth": "cdk synth",
    "version": "cdk --version",
    "bootstrap": "cdk {{#if profile}}--profile {{ profile }} {{/if}}bootstrap",
    "diff": "cdk {{#if profile}}--profile {{ profile }} {{/if}}diff",
    "deploy": "cdk {{#if profile}}--profile {{ profile }} {{/if}}deploy"
  },
  "devDependencies": {
    "@types/node": "10.17.5",
    "@typescript-eslint/eslint-plugin": "^2.20.0",
    "@typescript-eslint/parser": "^2.20.0",
    "aws-cdk": "^1.45.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-prettier": "^3.1.2",
    "prettier": "^1.19.1",
    "ts-node": "^8.1.0",
    "typescript": "~3.7.2"
  },
  "dependencies": {
    "mca-monitoring": "git+https://github.com/nordcloud/mca-monitoring.git#v0.0.4"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ]
  },
  "prettier": {
    "semi": true,
    "trailingComma": "all",
    "singleQuote": true,
    "printWidth": 120,
    "tabWidth": 2
  }
}
